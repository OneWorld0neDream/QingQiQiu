<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.qf.lenovo.qingqiqiu.ui.activities.LoadingActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="20dp">
        <EditText
            android:id="@+id/loading_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/loading_id"/>
        <EditText
            android:id="@+id/loading_psw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/loading_psw"/>
        <Button
            android:id="@+id/loading_load"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/loading_load"
            android:textColor="#ffffff"
            android:background="#2DC9D7"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/loading_no_id"/>
                <TextView
                    android:id="@+id/loading_register"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/loading_register"
                    android:textColor="#2DC9D7"/>
            </LinearLayout>
            <TextView
                android:id="@+id/loading_forget_psw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/loading_forget_psw"
                android:textColor="#2DC9D7"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
