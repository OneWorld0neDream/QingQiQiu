<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                               xmlns:app="http://schemas.android.com/apk/res-auto"
                                               android:layout_width="match_parent"
                                               android:layout_height="200dp"
                                               android:orientation="vertical">

    <ImageView
        android:id="@+id/imgLocationCover"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_margin="5dp"
        android:scaleType="fitXY"
        android:src="@mipmap/launch_icon"
        app:layout_aspectRatio="100%"
        app:layout_heightPercent="75%"/>

    <TextView
        android:id="@+id/txtPrimaryTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/imgLocationCover"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:text="PrimaryTitle"
        android:textSize="16sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/txtSecondaryTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtPrimaryTitle"
        android:gravity="center"
        android:text="SecondaryTitle"
        android:textSize="12sp"/>
</android.support.percent.PercentRelativeLayout>