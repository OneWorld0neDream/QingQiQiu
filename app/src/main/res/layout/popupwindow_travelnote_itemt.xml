<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/travelnote_content_cardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="5dp"
        app:cardCornerRadius="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/travelnote_content_popup_share"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_travelnote_popup_item"
                android:text="@string/travelnote_popup_share"/>
            <TextView
                android:id="@+id/travelnote_content_popup_recommend"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_travelnote_popup_item"
                android:text="@string/travelnote_popup_recommend"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>